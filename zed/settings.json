// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "zed",
  },
  "chat_panel": {
    "dock": "left",
  },
  "project_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
  },
  "notification_panel": {
    "dock": "left",
  },
  "git_panel": {
    "dock": "right",
  },
  "collaboration_panel": {
    "dock": "left",
  },
  "agent": {
    "dock": "left",
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest",
    },
    "model_parameters": [],
  },
  "edit_predictions": {
    "mode": "subtle",
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "lsp": {
    "wakatime": {},
  },
  "auto_install_extensions": {
    "git-firefly": true,
    "ruff": true,
    "toml": true,
    "golangci-lint": true,
    "gosum": true,
    "php": true,
    "vue": true,
    "dockerfile": true,
    "docker-compose": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "java": true,
    "sql": true,
    "make": true,
    "xml": true,
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          "venv",
          ".venv"
        ],
        "activate_script": "default",
      },
    },
  },
}
